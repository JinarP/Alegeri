doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/public/stylesheets/profile.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM", crossorigin="anonymous")
    title MY PROFILE
  body
    form(action="/profile/newcandidat", method="post")
      button(type="submit", class="btn btn-primary") CANDIDEAZA
      
    button#show-popup.btn.btn-warning(onclick="openInput()") AdaugÄƒ descriere

    form(action="/profile/addDescription", method="post")
