doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM", crossorigin="anonymous")
    link(rel="stylesheet", href="/public/stylesheets/list.css")
    title CANDIDATES LIST
  body 
  include ./navbar.jade
  div.card(style="background-color:#dee4eb")
   div.card-body
     h3#candidates
      each user, index in variable
       p #{index + 1}. #{user.name} 
        button.btn.btn-primary(onclick=`window.location.href="/list/seeCandidate?user=${user.name}"`) VIEW DESCRIPTION  
        button.btn.btn-success(onclick=`window.location.href="/candidates/votes?user=${user.name}"`) VOTES
    button.btn.btn-danger(onclick = "window.history.back()") BACK