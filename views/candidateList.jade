doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM", crossorigin="anonymous")
    link(rel="stylesheet", href="/public/stylesheets/list.css")
    title CANDIDATES LIST
  body 
  include ./navbar.jade
  br
  h2.display-6.text-center.mb-4 CANDIDATES LIST 
  div.table-responsive
  table.table.text-center
    thead
      tr
        th(style="width: 0%;") 
        th(style="width: 5%;") Position
        th(style="width: 22%;") Name
        th(style="width: 22%;") View Description
        th(style="width: 22%;") Vote

    tbody
      each user, index in variable
        tr
          th.text-start(scope="row")
          td #{index + 1}
          td #{user.name}
          td
            button.btn.btn-primary(onclick=`window.location.href="/list/seeCandidate?user=${user.name}"` style="margin-left: 15px") VIEW DESCRIPTION
          td
            button.btn.btn-success(onclick=`window.location.href="/candidates/votes?user=${user.name}"` style="margin-left: 15px") VOTES
